{
  "name": "coc-translator",
  "version": "1.8.2",
  "description": "Translation extension for coc.nvim",
  "main": "lib/index.js",
  "repository": {
    "url": "https://github.com/voldikss/coc-translator"
  },
  "publisher": "voldikss",
  "keywords": [
    "coc.nvim",
    "translation",
    "translator"
  ],
  "engines": {
    "coc": "^0.0.80"
  },
  "homepage": "https://github.com/voldikss/coc-translator",
  "scripts": {
    "clean": "rimraf lib",
    "watch": "webpack --watch",
    "build:types": "node scripts/gen_package_type.js",
    "build:webpack": "webpack --mode production",
    "build:doc": "ts-node ./scripts/gendoc.ts",
    "build": "run-s build:types build:webpack build:doc",
    "test:unit": "jest --runInBand --forceExit --verbose=false",
    "prettier": "prettier --write ./src",
    "prepare": "husky install"
  },
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Translator",
      "properties": {
        "translator.toLang": {
          "type": "string",
          "default": "zh_CN",
          "anyOf": [
            {
              "enum": [
                "zh_CN",
                "zh_TW",
                "en",
                "fr",
                "de",
                "ja",
                "ko",
                "ru"
              ]
            },
            {
              "type": "string"
            }
          ],
          "description": "Target language type, input it if it's not fould in the candidates"
        },
        "translator.engines": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "bing",
            "google",
            "youdao",
            "haici"
          ]
        },
        "translator.proxy": {
          "type": "string",
          "description": "Address of proxy, i.e., `socks://127.0.0.1:1081`"
        },
        "translator.enableHover": {
          "type": "boolean",
          "default": false,
          "description": "Translate when mouse hover"
        },
        "translator.window.enableBorder": {
          "type": "boolean",
          "default": true
        },
        "translator.window.maxWidth": {
          "type": "number",
          "default": 80
        },
        "translator.window.maxHeight": {
          "type": "number",
          "default": 20
        }
      }
    }
  },
  "author": "dyzplus@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^14.14.19",
    "@types/uuid": "^8.3.0",
    "@types/xml2js": "^0.4.7",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "@voldikss/tsconfig": "^1.0.0",
    "axios": "^0.24.0",
    "coc.nvim": "^0.0.81-next.16",
    "eslint": "^7.16.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "json-schema-to-typescript": "^10.1.2",
    "lint-staged": "^12.3.4",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "proxy-agent": "^5.0.0",
    "request-light": "^0.4.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.2",
    "ts-loader": "^8.0.13",
    "typescript": "^4.1.3",
    "uuid": "^8.3.2",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1",
    "xml2js": "^0.4.23"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --parser=typescript --write",
      "eslint --quiet",
      "git add"
    ],
    "*.js": [
      "prettier --parser=babel --write",
      "eslint --parser=@babel/eslint-parser --quiet",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/eslint-parser": "^7.17.0"
  }
}
